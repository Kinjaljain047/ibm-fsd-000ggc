package comm.example;

import static org.junit.jupiter.api.Assertions.*;

import org.junit.internal.runners.TestClass;
import org.junit.jupiter.api.Test;

import junit.framework.TestCase;

class TestCalculator extends TestCase {
	
	
	public TestCalculator(String name) {
		super(name);
	}
	int x;
	int y;
	Calculator c= new Calculator();
	
	@Override
	protected void setUp() throws Exception {
		
		super.setUp();
		System.out.println("initialize method:");
		int x= 10;
		int y= 20;
	}
	@Override
	protected void tearDown() throws Exception {
		// TODO Auto-generated method stub
		super.tearDown();
		System.out.println("clean up meyhod");
		int x=0;
		int y=0;
	}
	

	@Test
	public void testaddMethod() {
		int result=c.addMethod(x, y);
		assertEquals(30,result);
	}
	public static void main(String[] args) {
		System.out.println("running the test case:");
		junit.textui.TestRunner.run(TestCalculator.class);
	}
	
	

}
